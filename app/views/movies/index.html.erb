<%= form_tag movies_path, method: :get do %>
  <div class="row ml-1">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control-lg",
        placeholder: "Encontre um filme"
      %>
      <%= submit_tag "Buscar", class: "btn-lg btn-primary" %>
  </div>
<% end %>

<% @movies.each do |movie| %>
  <p><%= movie.titulo_no_brasil %></p>
<% end %>
