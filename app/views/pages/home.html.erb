<div class="container-fluid" id="home_geral">
  <div class="br-input" id="box">
    <h2 class="home-init">Classificação Indicativa</h2>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <%= form_tag movies_path, method: :get do %>
      <div class="row ml-1">
          <%= text_field_tag :query,
            params[:query],
            class: "br-input",
            placeholder: "Pesquisar por título da obra"
          %>
          <div class="container-fluid" id="buttons_place">
            <%= submit_tag "Pesquisar", class: "br-button primary mini" %>
          </div>
      </div>
    <% end %>
  </div>
</div>
