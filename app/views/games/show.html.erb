<div class="container" id="movies_index">
  <div class="movie-card-show">
    <img id="movie-card-show-poster" src="<%= "#{@game.poster}" %>" alt="<%= @game.titulo_no_brasil %> poster">
    <div id="movie-card-show-text">
      <h2><%= @game.titulo_no_brasil %></h2>
      <h4>(<%= @game.ano_de_producao %>)</h4>
      <p><%= @game.genero %></p>
      <div class="card" id="caixa-conteudo">
        <% if @game.classificacao.include? "Livre" %>
          <h6><%= "CLASSIFICAÇÃO INDICATIVA: Livre" %></h6>
          <div id="caixa-descritor">
            <%= image_tag "L.jpg" %>
            <div id="descritor-text">
              <p><%= @game.descritor_de_conteudo %></p>
            </div>
          </div>
        <% elsif @game.classificacao.include? "10" %>
          <h6><%= "CLASSIFICAÇÃO INDICATIVA: 10 ANOS" %></h6>
          <div id="caixa-descritor">
            <%= image_tag "10.jpg" %>
            <div id="descritor-text">
              <p><%= @game.descritor_de_conteudo %></p>
            </div>
          </div>
        <% elsif @game.classificacao.include? "12" %>
          <h6><%= "CLASSIFICAÇÃO INDICATIVA: 12 ANOS" %></h6>
          <div id="caixa-descritor">
            <%= image_tag "12.jpg" %>
            <div id="descritor-text">
              <p><%= @game.descritor_de_conteudo %></p>
            </div>
          </div>
        <% elsif @game.classificacao.include? "14" %>
          <h6><%= "CLASSIFICAÇÃO INDICATIVA: 14 ANOS" %></h6>
          <div id="caixa-descritor">
            <%= image_tag "14.jpg" %>
            <div id="descritor-text">
              <p><%= @game.descritor_de_conteudo %></p>
            </div>
          </div>
        <% elsif @game.classificacao.include? "16" %>
          <h6><%= "CLASSIFICAÇÃO INDICATIVA: 16 ANOS" %></h6>
          <div id="caixa-descritor">
            <%= image_tag "16.jpg" %>
            <div id="descritor-text">
              <p><%= @game.descritor_de_conteudo %></p>
            </div>
          </div>
        <% elsif @game.classificacao.include? "18" %>
          <h6><%= "CLASSIFICAÇÃO INDICATIVA: 18 ANOS" %></h6>
          <div id="caixa-descritor">
            <%= image_tag "18.jpg" %>
            <div id="descritor-text">
              <p><%= @game.descritor_de_conteudo %></p>
            </div>
          </div>
        <% end %>
      </div>
      <h5>Classificação Indicativa:</h5><p><%= @game.classificacao %></p>
    </div>
  </div>
  <div id="back-button">
    <%= link_to "Voltar", root_path, class: "br-button primary mini" %>
  </div>
</div>
